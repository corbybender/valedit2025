    <script>
      // Debug: Check if notifications.js loaded
      logger.info("🔍 Dashboard script running");
      logger.info("🔍 showNotification exists:", typeof showNotification);
      logger.info("🔍 notificationManager exists:", typeof notificationManager);

      // Test notification immediately
      setTimeout(() => {
        logger.info("🔍 Testing notification after 2 seconds");
        if (typeof showNotification === "function") {
          showNotification("Dashboard loaded successfully!", "success");
        } else {
          console.error("🔍 showNotification function not available");
          // Create fallback notification
          const div = document.createElement("div");
          div.style.cssText =
            "position:fixed;top:20px;right:20px;background:#28a745;color:white;padding:10px;border-radius:4px;z-index:10000;";
          div.textContent = "Fallback: Dashboard loaded!";
          document.body.appendChild(div);
          setTimeout(() => div.remove(), 3000);
        }
      }, 2000);
    </script>
    <script>
      // Test notification functions
      function testNotification(type) {
        const messages = {
          success: "This is a success notification!",
          error: "This is an error notification!",
          warning: "This is a warning notification!",
          info: "This is an info notification!",
        };

        showNotification(messages[type], type);
      }

      async function createPersistentNotification() {
        try {
          const response = await fetch("/api/notifications/test", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
          });

          if (response.ok) {
            const result = await response.json();
            showNotification(
              "Persistent notification created successfully! Check the bell icon.",
              "success"
            );
            // Update the notification bell count
            updateNotificationCount();
          } else {
            showNotification(
              "Failed to create persistent notification",
              "error"
            );
          }
        } catch (error) {
          console.error("Error creating persistent notification:", error);
          showNotification("Error creating persistent notification", "error");
        }
      }
