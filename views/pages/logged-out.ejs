<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Logged Out - CMS</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <link href="/public/css/login.css" rel="stylesheet" />
  </head>
  <body class="login-body">
    <div class="login-container">
      <div class="logo-section">
        <div class="logo-icon">
          <i class="fas fa-check-circle" style="color: #28a745"></i>
        </div>
        <h1>Logged Out Successfully</h1>
        <p class="subtitle">Thank you for using our CMS</p>
      </div>

      <div class="success-message show">
        <% if (typeof message !== 'undefined') { %> <%= message %> <% } else {
        %> You have been successfully logged out. <% } %>
      </div>

      <div class="login-buttons">
        <a href="/auth/login" class="btn btn-azure">
          <i class="fas fa-sign-in-alt"></i>
          Sign In Again
        </a>
      </div>

      <div class="features">
        <div class="feature-list">
          <div class="feature-item">
            <i class="fas fa-shield-alt"></i>
            <span>Session Cleared</span>
          </div>
          <div class="feature-item">
            <i class="fas fa-lock"></i>
            <span>Data Protected</span>
          </div>
          <div class="feature-item">
            <i class="fas fa-history"></i>
            <span>Activity Logged</span>
          </div>
          <div class="feature-item">
            <i class="fas fa-user-check"></i>
            <span>Secure Logout</span>
          </div>
        </div>
      </div>

      <div class="login-footer">
        <p style="padding-top: 40px">
          &copy; <%= new Date().getFullYear() %> Valmont CMS. All rights
          reserved.
        </p>
      </div>
    </div>

    <script>
      // Auto-redirect to login after 5 seconds
      setTimeout(() => {
        window.location.href = "/auth/login";
      }, 5000);

      // Show countdown
      let countdown = 5;
      const countdownElement = document.createElement("p");
      countdownElement.style.cssText =
        "margin-top: 1rem; color: #666; font-size: 0.9rem;";
      countdownElement.textContent =
        "Redirecting to login in " + countdown + " seconds...";
      document.querySelector(".login-buttons").appendChild(countdownElement);

      const countdownInterval = setInterval(() => {
        countdown--;
        countdownElement.textContent =
          "Redirecting to login in " + countdown + " seconds...";

        if (countdown <= 0) {
          clearInterval(countdownInterval);
          countdownElement.textContent = "Redirecting...";
        }
      }, 1000);
    </script>
  </body>
</html>
