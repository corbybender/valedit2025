<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Documents - <%= process.env.APP_NAME || 'ValEdit' %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <link href="/public/css/dashboard.css?v=1" rel="stylesheet" />
    <link href="/public/css/AzureStorage.css" rel="stylesheet" />
    <script src="/public/js/notifications.js"></script>
  </head>
  <body class="bg-gray-50">
    <!-- Tailwind Megamenu -->
    <%- include('../partials/tailwind-megamenu') %>

    <!-- Main Content -->
    <main class="w-full px-2 py-8">
      <div class="bg-white p-8 rounded-lg shadow-lg w-full">
        <div class="flex justify-between items-center mb-8">
          <div>
            <h1 class="text-3xl font-bold text-gray-800">Documents</h1>
            <p class="text-gray-600 mt-2">
              Manage your website documents and downloadable files
            </p>
          </div>
        </div>

        <div class="azure-storage-container">
          <section class="card">
            <h2>Upload New Document</h2>
            <form id="upload-form">
              <input type="hidden" name="folder" value="docs" />
              <div class="form-group">
                <label for="file-input">Select File:</label>
                <input type="file" id="file-input" name="file" required />
              </div>
              <button
                type="submit"
                class="bg-indigo-600 text-white font-bold py-2 px-4 rounded-lg hover:bg-indigo-700"
              >
                <i class="fas fa-upload mr-2"></i>Upload Document
              </button>
            </form>
            <div id="upload-status" class="status-message"></div>
          </section>

          <section class="card">
            <div class="flex justify-between items-center">
              <h2>
                <i class="fas fa-folder text-2xl text-gray-500 mr-2"></i>
                /docs/
              </h2>
              <button id="refresh-button" title="Refresh List">
                <i class="fas fa-sync-alt"></i>
              </button>
            </div>
            <div class="table-container">
              <table id="files-table">
                <thead>
                  <tr>
                    <th>Filename</th>
                    <th>Last Modified</th>
                    <th>Size</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody id="files-list"></tbody>
              </table>
            </div>
            <div id="files-status" class="status-message"></div>
          </section>
        </div>
      </div>
    </main>

    <div id="edit-modal" class="modal">
      <div class="modal-content">
        <span class="close-button">&times;</span>
        <h3>Edit File: <span id="modal-filename"></span></h3>
        <form id="edit-form">
          <input type="hidden" id="edit-blob-name" /><textarea
            id="edit-textarea"
          ></textarea
          ><button type="submit">Save Changes</button>
        </form>
        <div id="edit-status" class="status-message"></div>
      </div>
    </div>
    <div id="replace-modal" class="modal">
      <div class="modal-content">
        <span class="close-button">&times;</span>
        <h3>Replace File: <span id="replace-modal-filename"></span></h3>
        <form id="replace-form">
          <input type="hidden" id="replace-blob-name" />
          <div class="form-group">
            <label for="replace-file-input">Select New File:</label
            ><input type="file" id="replace-file-input" name="file" required />
          </div>
          <button type="submit">Upload and Replace</button>
        </form>
        <div id="replace-status" class="status-message"></div>
      </div>
    </div>

    <script src="/public/js/dashboard.js"></script>
    <script src="/public/js/content-documents.js"></script>
  </body>
</html>
