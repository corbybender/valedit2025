<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Settings - <%= process.env.APP_NAME || 'ValEdit' %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <link href="/public/css/dashboard.css?v=1" rel="stylesheet" />
    <link href="/public/css/users.css?v=1" rel="stylesheet" />
    <script src="/public/js/notifications.js"></script>
</head>
<body class="bg-gray-50">
    <%- include('../partials/tailwind-megamenu') %>

    <main class="w-full px-2 py-8">
        <div class="bg-white p-8 rounded-lg shadow-lg w-full">
            <div class="flex items-center justify-between mb-6">
                <h1 class="text-3xl font-bold text-gray-800">Settings</h1>
                <button id="createSettingBtn" class="bg-indigo-600 text-white font-bold py-2 px-4 rounded-lg hover:bg-indigo-700 transition duration-300 ease-in-out flex items-center">
                    <i class="fas fa-plus mr-2"></i>Create Setting
                </button>
            </div>

            <div id="settingsList" class="grid grid-cols-1 gap-4">
                <!-- Settings will be loaded here -->
            </div>
        </div>
    </main>

    <div id="settingModal" class="modal-backdrop hidden">
        <div class="modal-content max-w-2xl">
            <div class="flex justify-between items-center p-5 border-b">
                <h2 id="modalTitle" class="text-2xl font-bold text-gray-900">Create Setting</h2>
                <button id="closeModalBtn" class="text-gray-500 hover:text-gray-800 text-2xl">&times;</button>
            </div>

            <div class="p-6 flex-grow overflow-y-auto">
                <form id="settingForm">
                    <input type="hidden" id="settingKey" name="settingKey" />
                    <div class="mb-6">
                        <label for="setting_key" class="block text-sm font-medium text-gray-700 mb-2">Key *</label>
                        <input type="text" id="setting_key" name="setting_key" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500" />
                    </div>
                    <div class="mb-6">
                        <label for="setting_value" class="block text-sm font-medium text-gray-700 mb-2">Value *</label>
                        <textarea id="setting_value" name="setting_value" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500"></textarea>
                    </div>
                    <div class="mb-6">
                        <label for="description" class="block text-sm font-medium text-gray-700 mb-2">Description</label>
                        <textarea id="description" name="description" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500"></textarea>
                    </div>
                    <div class="flex items-center">
                        <input type="checkbox" id="is_encrypted" name="is_encrypted" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" />
                        <label for="is_encrypted" class="ml-2 block text-sm text-gray-900">Encrypted</label>
                    </div>
                </form>
            </div>

            <div class="flex justify-end items-center p-5 border-t bg-gray-50 space-x-3">
                <button id="cancelBtn" type="button" class="bg-gray-200 text-gray-800 font-bold py-2 px-4 rounded-lg hover:bg-gray-300 transition duration-300">Cancel</button>
                <button id="saveSettingBtn" type="button" class="bg-indigo-600 text-white font-bold py-2 px-4 rounded-lg hover:bg-indigo-700 transition duration-300">Save Setting</button>
            </div>
        </div>
    </div>

    <div id="notificationContainer"></div>

    <script src="/public/js/frontend-logger.js"></script>
    <script src="/public/js/settings.js"></script>
    <script src="/public/js/dashboard.js"></script>
</body>
</html>
